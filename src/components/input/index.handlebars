<div class="input {{class}}">
    <label class="input__label" for="{{id}}">
        {{label}}
    </label>
    <div class="input_wrapper">
        <input class="input__input" id="{{id}}" name="{{name}}" type="{{type}}" placeholder="{{placeholder}}" {{props}}>
        <button class="input_button hidden">
            {{> '../../elements/svgClose/index' class='input_button__close'}}
        </button>
    </div>
</div>