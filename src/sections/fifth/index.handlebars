<section class="fifth_section wrapper--padding-y">
    {{> '../../components/anchor/index' id='anchor_form'}}
    <div class="wrapper fifth_section_wrapper">
        <h4 class="block__title self-start">
            <span class="lng_form_title ">
                Записатись
            </span>
            <span class="text-secondary">!</span>
        </h4>
        <div class="fifth_section_body">
            <form id="form" class="form">
                {{> '../../components/input/index' id='input_name' name='name' label='Як до Вас
                звертатіся?' type='text' props='required' classLabel='lng_fifth_section_label_1'
                classInput='lng_fifth_section_input_1' placeholder='Введіть своє повне ім’я'}}

                {{> '../../components/input/index' id='input_phone' name='phone' label='Ваш номер телефону?'
                type='text' props='required' classLabel='lng_fifth_section_label_2'
                placeholder='+11 222 333 44 44'}}

                <div class="input">
                    <label class="lng_fifth_section_label_3 input__label" for="input_description">
                        Поставте запитання або оформіть заявку
                    </label>
                    <div class="input_wrapper">
                        <textarea class="lng_fifth_section_input_3 input__textarea" id="input_description"
                            name="question" placeholder="Тут Ви можете залишити запитання чи коментар"></textarea>
                        <button class="input_button hidden top-[20px] right-[20px]">
                            {{> '../../elements/svgClose/index' class='input_button__close'}}
                            <span class="lng_common_sr_button_clear_input sr-only">Кнопка для очищення поля</span>
                        </button>
                    </div>
                </div>
                <button id='button_submit' type='submit'
                    class='button button_scroll relative bg-quinary-100 lg:self-start'>
                    <span class='lng_fifth_section_button_submit button__text invisible'>
                        відправити повідомлення
                    </span>
                    <span class='button_scroll_wrapper'>
                        <span class='button_scroll_text'>
                            <span class='lng_fifth_section_button_submit button__text' aria-hidden='true'>
                                відправити повідомлення
                            </span>
                            <span class='lng_fifth_section_button_submit button__text' aria-hidden='true'>
                                відправити повідомлення
                            </span>
                        </span>
                    </span>
                    <span id="spinner_form" class="spinner_form hidden">
                        {{> '../../elements/spinner/index' class='animate-spin h-[40px]'}}
                    </span>
                </button>
                <div class="form_area hidden">
                    <img class="form_area__img" src="assets/successful_request.png" alt="Зображення успіху">
                    <span class="lng_fifth_section_success_message form_area__title">
                        Вашу заявку було прийнято в обробку, ми зв'яжемося з вами найближчим часом
                    </span>
                    <span class="form_area__text">
                        <span class="lng_fifth_section_success_time">
                            До відправки нової заявки залишилось:
                        </span><span id="form_area__time"></span>
                    </span>
                </div>
            </form>
            <div class="fifth_section_body_second contact">
                {{> '../../components/anchor/index' id='anchor_contact'}}
                <div class="fifth_section_body_second_1">
                    {{> '../../elements/decorElementsForTouching/index' class='fifth_section_body_second_1--animation'}}
                </div>
                <div class="contact_info fifth_section_body_second_2">
                    <div class="contact_item">
                        <h5 class="lng_fifth_section_title_1 contact__title">
                            телефон
                        </h5>
                        <div class="contact_info_body">
                            <div>
                                <a href="tel:+380961705376"
                                    class="contact_info_body__text contact_info_body__text--hover">
                                    +38 (096) 170 53 76
                                </a>
                            </div>
                            <div>
                                <a href="tel:+380506877685"
                                    class="contact_info_body__text contact_info_body__text--hover">
                                    +38 (050) 687 76 85
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="contact_item">
                        <h5 class="contact__title">
                            e-mail
                        </h5>
                        <div class="contact_info_body">
                            <div>
                                <a href="mailto:borisbortnikov@gmail.com"
                                    class="contact_info_body__text break-all contact_info_body__text--hover">
                                    borisbortnikov@gmail.com
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="contact_item">
                        <h5 class="lng_fifth_section_title_2 contact__title">
                            Адреса
                        </h5>
                        <div class="contact_info_body">
                            <div>
                                <p class="lng_header_text contact_info_body__text contact_info_body__text--hover">
                                    Київ (десять хвилин від метро Позняки)
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="fifth_section_body_second_3">
                    {{> '../../components/socialNetworks/index' class='max-sm:justify-center'}}
                </div>
                <div class="contact_locate contact_item fifth_section_body_second_4">

                    <h5 class="lng_fifth_section_title_3 contact__title">
                        Локація
                    </h5>

                    <button id="contact_locate_map" class="contact_locate_map">
                        <span class="lng_fifth_section_button_map sr-only">Відкрити мапу за допомогою Google</span>
                        <span class="block overflow-hidden rounded-lg">
                            <img class="contact_locate_map__img" src="assets/map.png"
                                alt="Малюнок, де знаходиться майстер">
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>